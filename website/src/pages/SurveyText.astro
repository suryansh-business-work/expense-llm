---
const { surveyLink = '/survey-one', message = 'Please take a quick survey and get 500 messages free!' } = Astro.props;
---

<div class="survey-banner">
  <button class="close-btn" onclick="this.parentElement.style.display='none'">Ã—</button>
  <p><strong>{message}</strong></p>
  <a class="button" href={surveyLink} class="cta-btn">Take Survey</a>
</div>

<style>
  .survey-banner {
    position: relative;
    background-color: #f0f8ff;
    border: 1px solid #cce;
    padding: 1rem 1.5rem;
    border-radius: 8px;
    text-align: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
  }

  .survey-banner p {
    margin: 0 0 1rem;
    font-size: 1rem;
    color: #333;
  }

  .close-btn {
    position: absolute;
    top: 8px;
    right: 12px;
    background: transparent;
    border: none;
    font-size: 20px;
    cursor: pointer;
    color: #666;
  }

  .close-btn:hover {
    color: #000;
  }
</style>

---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Survey - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <section class="pt-3 pb-3">
        <div class="container">
          <div class="row">
            <div class="col-12"><h1>Botify Survey</h1></div>
          </div>
        </div>
      </section>

      <section class="pt-3 pb-5">
        <div class="container">
          <form action="#" method="post" class="survey-form">
            <div class="form-group">
              <label for="fullname">Full Name</label>
              <input type="text" id="fullname" name="fullname" required />
            </div>

            <div class="form-group">
              <label for="email">Email Address</label>
              <input type="email" id="email" name="email" required />
              <p class="disclaimer">
                <strong>Note:</strong> 500 tokens will be added to this email if
                you're already have a account with us. If not, <a
                  href="/login">log in here</a
                >.
              </p>
            </div>

            <div class="form-group">
              <label>Do you think Botify is useful?</label>
              <div>
                <label
                  ><input type="radio" name="useful" value="yes" required /> Yes</label
                >
                <label><input type="radio" name="useful" value="no" /> No</label
                >
              </div>
            </div>

            <div class="form-group">
              <label for="feature">Which feature do you use most?</label>
              <select name="feature" id="feature">
                <option value="chat">AI Chat</option>
                <option value="automation">Automation</option>
                <option value="analytics">Analytics</option>
                <option value="integration">Third-Party Integrations</option>
              </select>
            </div>

            <div class="form-group">
              <label for="improvements"
                >What would you like to see improved?</label
              >
              <textarea id="improvements" name="improvements" rows="4"
              ></textarea>
            </div>

            <div class="form-group">
              <label for="rating">How would you rate Botify?</label>
              <select id="rating" name="rating">
                <option value="5">★★★★★ - Excellent</option>
                <option value="4">★★★★☆ - Good</option>
                <option value="3">★★★☆☆ - Average</option>
                <option value="2">★★☆☆☆ - Poor</option>
                <option value="1">★☆☆☆☆ - Bad</option>
              </select>
            </div>

            <div class="form-group">
              <button type="submit">Submit Survey</button>
            </div>
          </form>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>

<style>
  .form-group {
    display: flex;
    flex-direction: column;
  }
  .form-group label {
    font-weight: 600;
    margin-bottom: 0.5rem;
  }
  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 0.5rem;
    font-size: 1rem;
    border: 1px solid #ccc;
    border-radius: 4px;
  }
  .form-group input[type="radio"] {
    margin-right: 0.25rem;
  }
  button[type="submit"] {
    background-color: #0070f3;
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    cursor: pointer;
    border-radius: 4px;
  }
  button[type="submit"]:hover {
    background-color: #005ad3;
  }
</style>

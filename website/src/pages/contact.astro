---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<div class="container">
				<div class="row">
					<div class="col-12">
						<h1>Contact</h1>
						<p>
							Got a question, or interested in learning more about botify? Let
							us know how we can help. Choose your topic of interest, fill in
							your details, and we'll get back to you as soon as possible. We
							look forward to connecting
						</p>
						<div class="form-wrapper">
							<form>
								<div class="row">
									<div class="col-12">
										<div class="contact-for-options">
											<label>I'm interested in...</label>
											<ul>
												<li><a>Request app demo</a></li>
												<li><a>Product info / Support</a></li>
												<li><a>Become a Partner</a></li>
												<li><a>Working with you</a></li>
												<li><a>General Information</a></li>
												<li><a>Legal questions</a></li>
												<li><a>Pricing</a></li>
												<li><a>Other</a></li>
											</ul>
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-6">
										<div class="input-wrapper">
											<label>Hello, my name is</label>
											<input type="text" placeholder="Full Name" />
										</div>
									</div>
									<div class="col-6">
										<div class="input-wrapper">
											<label>I'm working as</label>
											<input type="text" placeholder="Job Title" />
										</div>
									</div>
								</div>

								<div class="row">
									<div class="col-6">
										<div class="input-wrapper">
											<label>Company name</label>
											<input type="text" placeholder="Company" />
										</div>
									</div>
									<div class="col-6">
										<div class="input-wrapper">
											<label>You can react me at</label>
											<input type="text" placeholder="Email Address" />
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-12">
										<div class="input-wrapper">
											<label>Your Message</label>
											<textarea></textarea>
										</div>
									</div>
								</div>
								<div class="action-wrapper">
									<button class="cta">Send</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	.contact-for-options {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
		margin-bottom: 2rem;
		ul {
			display: flex;
			flex-wrap: wrap;
			gap: 1rem;
			padding: 0;
			list-style: none;
			margin: 0;
			li {
				a {
					display: inline-block;
					padding: 0.6rem 1.2rem;
					border-radius: 999px;
					border: 1px solid #ccc;
					background: #fff;
					cursor: pointer;
					font-size: 0.9rem;
					color: #333;
					&.active {
						background: #1f2c3d;
						color: #fff;
					}
				}
			}
		}
	}
</style>

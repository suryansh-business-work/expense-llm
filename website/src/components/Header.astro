---
import SurveyText from "../pages/SurveyText.astro";
import HeaderLink from "./HeaderLink.astro";
let isOpen = false;
const toggleMenu = () => {
  isOpen = true;
};
---

<SurveyText />
<header>
  <nav>
    <div class="container">
      <div class="row">
        <div class="col-4 logo-container">
          <a href="/"
            ><img width="100px" src="/logo/botify-logo.png" alt="Botify" /></a
          >
        </div>
        <div class="col-4 nav-actions">
          <div class={`internal-links ${isOpen ? "open" : ""}`}>
            <HeaderLink href="/product">Product</HeaderLink>
            <HeaderLink href="/solutions">Solutions</HeaderLink>
            <HeaderLink href="/blog">Blog</HeaderLink>
            <HeaderLink href="/contact">Contact</HeaderLink>
            <HeaderLink href="/pricing">Pricing</HeaderLink>
            <HeaderLink href="/docs">Docs</HeaderLink>
          </div>
        </div>
        <div class="col-4 nav-actions">
          <div class={`internal-links ${isOpen ? "open" : ""}`}>
            <HeaderLink href="/login">Login</HeaderLink>
            <HeaderLink class="button" href="/signup">Get started â€” it's free</HeaderLink
            >
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0 1em;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
    backdrop-filter: blur(10px);
    height: 60px;
    position: absolute;
    width: 100%;
    background: white;
    z-index: 1000;
    .logo-container {
      img,
      a {
        display: block;
      }
    }
    nav {
      height: 100%;
      display: flex;
      font-size: 1rem;
      align-items: center;
      .container {
        width: 100%;
        .row {
          display: flex;
          align-items: center;
          justify-content: space-between;

          .logo-container {
            display: flex;
            align-items: center;
          }

          .nav-actions {
            display: flex;
            align-items: center;
            justify-content: flex-end;
            position: relative;
            .internal-links {
              display: flex;
              align-items: center;
              gap: 1.5rem;
              a {
                border: 2px solid transparent;
                text-decoration: none;
                &.active {
                  border-bottom: 2px solid #0055d4;
                }
              }
            }
          }
        }
      }
    }
  }

  /* ðŸ“± Mobile styles */
  @media (max-width: 720px) {
    header nav .nav-actions {
      flex-direction: column;
      align-items: flex-end;
      .hamburger {
        display: block;
      }
      .internal-links {
        flex-direction: column;
        align-items: flex-end;
        gap: 1rem;
        position: absolute;
        top: 60px;
        right: 0;
        background: white;
        padding: 1rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        display: none;

        &.open {
          display: flex;
        }
      }
    }
  }
</style>
